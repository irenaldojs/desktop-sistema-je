{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/*", "src/preload/*", "src/renderer/*.tsx"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "strictNullChecks": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}

